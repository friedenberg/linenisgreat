<table>
  <colgroup>
    <col class="tdleft">
    <col class="tdright">
  </colgroup> 
  <tbody>
    <thead>
      <tr>
        <th colspan="2">
          <div class="title uppercase">{{name}}</div>
          <div class="i">{{kind}}</div>
        </th>
      </tr>
    </thead>
    {{#recipe}}
    <tr>
      <td class="tdleft small-caps">{{proportion}}</td>
      <td class="tdright">{{ingredient}}</td>
    </tr>
    {{/recipe}}
    {{#glass}}
    <tr>
      <td class="tdleft">glass</td>
      <td class="tdright">{{glass}}</td>
    </tr>
    {{/glass}}
    {{#garnish}}
    <tr>
      <td class="tdleft">garnish</td>
      <td class="tdright">{{.}}</td>
    </tr>
    {{/garnish}}
    {{#prep}}
    <tr>
      <td class="tdleft">prep</td>
      <td class="tdright">{{.}}</td>
    </tr>
    {{/prep}}
  </tbody>
</table> 
<div class="icon icon-{{{icon_css_class}}}"></div>
